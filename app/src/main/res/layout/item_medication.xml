<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <TextView
        android:id="@+id/tvMedicationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paracetamol"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMedicationDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Take with food"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvMedicationTime"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMedicationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="30dp"
        android:text="09:30:00AM"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bConsumed"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bConsumed"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="\u2713"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bCancelled"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <Button
        android:id="@+id/bCancelled"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="\u2716"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <TextView
        android:id="@+id/rowBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_________________________________________________"
        android:textSize="17dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>