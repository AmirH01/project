<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/tvMedicationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Paracetamol"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMedicationDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Take with food"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMedicationTime"
        app:layout_constraintStart_toEndOf="@+id/tvMedicationName"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvMedicationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:30AM"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bConsumed"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"/>


    <Button
        android:id="@+id/bConsumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Take"

        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>